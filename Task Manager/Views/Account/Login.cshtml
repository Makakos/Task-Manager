@model Task_Manager.Models.LoginViewModel

<h2>Log in</h2>
<form method="post" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@ViewBag.ReturnUrl">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div>
        <label asp-for="IsRemember"></label><br />
        <input asp-for="IsRemember" />
    </div>
    <div>
        <a asp-controller="Account" asp-action="PasswordRecovery" >Forgot password?</a><br />
    </div>
    <div>
        <input type="submit" value="Log in" />
    </div>
</form>


