@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>

    @if (User.Identity.IsAuthenticated)
    {
        <h2>@Model.UserName</h2>

        <p >
            <h4 > You have @Model.Goals.Count unfinished tasks</h4>
        </p>

        <form method="post" asp-controller="Account" asp-action="Logout">
            <input class="btn btn-primary" type="submit" value="Выход" />
        </form>

    }


    else
    {
        <a class="btn btn-primary" asp-controller="Account" asp-action="Login">Вход</a>
        <a class="btn btn-primary" asp-controller="Account" asp-action="Registration">Регистрация</a>
    }

</div>
