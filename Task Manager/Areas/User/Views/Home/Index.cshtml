@model User
@{
    string strTitle = "Личный кабинет";
    ViewBag.Title = strTitle;
}

<div>
    <h2>@strTitle</h2>
    <div>
        <h3>Ваши цели,@Model.UserName</h3>
        <div class="div-box">
            <a asp-area="User" asp-controller="Goals" asp-action="Edit" asp-route-id="">Добавить задачу</a>
        </div>
        @if (Model.Goals!=null)
        {
            <div>
                @foreach (Goal entity in Model.Goals)
                {
                    <div>
                        <a asp-area="User" asp-controller="Goals" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                        |
                        <form style="display: inline-block;" id="form-@entity.Id" asp-area="User" asp-controller="Goals" asp-action="Delete" method="post">
                            <input type="hidden" name="id" value="@entity.Id">
                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                        </form>
                        |
                        <a asp-area="User" asp-controller="Goal" asp-action="Index" asp-route-id="@entity.Id">
                            @($"{entity.Title}")
                        </a>
                    </div>
                }
            </div>
        }
    </div>
